{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022"
  },
  "include": [
    "src/**/*",
    "prisma-master/**/*",
    "prisma-tenant/**/*",
    "master-client-types/**/*",
    "tenant-client-types/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
